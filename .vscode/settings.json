{
  // ========== Visuals ==========
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "boundary",
  "editor.hideCursorInOverviewRuler": true,

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "editor.fontFamily": "Input Mono, monospace",
  "workbench.iconTheme": "catppuccin-macchiato",
  "window.commandCenter": false,

  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.list.smoothScrolling": true,

  "workbench.editor.tabActionLocation": "left",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 10,
  "workbench.layoutControl.enabled": false,

  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.expandMode": "singleClick",
  "workbench.editor.empty.hint": "text",

  // TODO: Hide VS Code logo too üßê
  "workbench.tips.enabled": false,

  // ========== Editor ==========
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabSize": 2,
  "editor.dragAndDrop": false,

  // I prefer "zenkaku extension" ("mosapride.zenkaku") üôÇ
  "editor.unicodeHighlight.invisibleCharacters": false,

  "editor.hover.sticky": true,

  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // auto rename tag, auto close tag
  "editor.linkedEditing": true,
  "html.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.decorations.badges": false,

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,

  "terminal.integrated.defaultProfile.osx": "nu",
  "terminal.integrated.profiles.osx": {
    "nu": {
      "path": "/etc/profiles/per-user/naitokosuke/bin/nu"
    }
  },
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Menlo",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,

  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,

  // Custom tab labels for Vue/Nuxt projects
  "workbench.editor.customLabels.patterns": {
    "**/index.vue": "${dirname} .../${dirname(1)}",
    "**/index.{js,ts}": "${dirname} .../${dirname(1)}",
    "**/{composables,components,utils,types,stores,middleware,plugins,layouts,pages}.{js,ts}": "${dirname}/${filename}.${extname} .../${dirname(1)}"
  },

  // ========== BE CAREFUL TO EXCLUDE ==========
  "search.exclude": {
    //   "**/*.snap": true,
      "**/*.svg": true,
      "**/.git": true,
    //   "**/.github": false,
    //   "**/.nuxt": true,
    //   "**/.output": true,
      "**/.pnpm": true,
      "**/.vscode": true,
      "**/.yarn": true,
    //   // "**/assets": true,
    //   "**/bower_components": true,
    //   "**/dist/**": true,
    //   "**/logs": true,
      "**/node_modules": true,
    //   "**/out/**": false,
      "**/package-lock.json": true,
      "**/pnpm-lock.yaml": true,
    //   "**/public": true,
    //   "**/temp": true,
      "**/yarn.lock": true,
      "**/CHANGELOG*": true,
      "**/LICENSE*": true,
      ".tours": true,
      "___naito___/": true,
    },

    "search.showLineNumbers": true,

  // ==========  Global Level Config, needs to put in User Settings ==========
  "window.dialogStyle": "custom",
  "window.nativeTabs": true, // macOS only üòá
  "window.title": "${rootName}",

  // ========== Extension configs ==========
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.quiet": true,
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off" },
    { "rule": "format/*", "severity": "off" },
    { "rule": "*-indent", "severity": "off" },
    { "rule": "*-spacing", "severity": "off" },
    { "rule": "*-spaces", "severity": "off" },
    { "rule": "*-order", "severity": "off" },
    { "rule": "*-dangle", "severity": "off" },
    { "rule": "*-newline", "severity": "off" },
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml"
  ],

  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",

  "githubPullRequests.createOnPublishBranch": "never",

  "gitlens.codeLens.enabled": false,

  // TBH, I'm not really sure what changes with these 2 settings üòÖ
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": false
  },
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  "iconify.annotations": true,
  "iconify.inplace": true,

  "svg.preview.mode": "svg",

  "prettier.enable": false,

  "claudeCode.preferredLocation": "panel",

  // ========== Draw.io ==========
  // For my job üëî
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.appearance": "light",

  // ========== File Nesting ==========
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    // AI Agent Settings
    "CLAUDE.md": ".cursorrules, .windsurfrules, AGENTS.md, AGENT.md, GEMINI.md, .clinerules, .replit.md",

    // Documentation
    "README.md": "AUTHORS, BACKERS*, CHANGELOG*, CITATION*, CODEOWNERS, CODE_OF_CONDUCT*, CONTRIBUTING*, CONTRIBUTORS, COPYING*, CREDITS, GOVERNANCE.md, HISTORY.md, LICENSE*, MAINTAINERS, RELEASE_NOTES*, ROADMAP.md, SECURITY.md, SPONSORS*",

    // Environment
    ".env": ".env.*, .envrc, env.d.ts",

    // Git
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",

    // Package Manager (minimal)
    "package.json": "package-lock.json, pnpm-lock.yaml, pnpm-workspace.yaml, yarn.lock, bun.lockb, bun.lock, .npmrc, .nvmrc, .node-version",

    // TypeScript
    "tsconfig.json": "tsconfig.*.json, jsconfig.json, jsconfig.*.json",

    // Linter / Formatter (each independent)
    "eslint.config.*": "eslint.config.*.$(capture), .eslintrc.*, .eslintignore",
    "prettier.config.*": "prettier.config.*.$(capture), .prettierrc.*, .prettierignore",
    "oxlint.config.*": "oxlint.config.*.$(capture), .oxlintrc.*",

    // Vite + Vitest
    "vite.config.*": "vitest.config.$(capture), vitest.workspace.$(capture)",

    // Nuxt
    "nuxt.config.*": "app.config.$(capture), .nuxtrc, .nuxtignore",

    // Nix (devenv + direnv)
    "flake.nix": "flake.lock",
    "devenv.nix": "devenv.yaml, devenv.lock, .envrc",

    // GraphQL
    "schema.graphql": ".graphqlrc*, codegen.ts, codegen.yml",

    // Playwright
    "playwright.config.*": "playwright-ct.config.$(capture)",

    // Source files with tests / stories
    "*.ts": "$(capture).test.ts, $(capture).spec.ts, $(capture).d.ts, $(capture).d.ts.map, $(capture).js, $(capture).js.map",
    "*.vue": "$(capture).test.ts, $(capture).spec.ts, $(capture).stories.tsx, $(capture).story.vue"
  },


  // ========== Now I'm Trying ‚¨áÔ∏è ==========
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  "editor.minimap.enabled": false,
  "editor.foldingImportsByDefault": true,
  "editor.showFoldingControls": "always",
  "typescript.referencesCodeLens.enabled": true,

  // ==========  Global Level Config, needs to put in User Settings ==========
  "window.newWindowDimensions": "inherit",
}
